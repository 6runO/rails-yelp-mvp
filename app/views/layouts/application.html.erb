<!DOCTYPE html>
<html>
  <head>
    <title>RailsYelpMvp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <%# <p class="navbar-brand m-0 pb-1" href="#">RestaApp</p> %>
      <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
        <div class="navbar-nav">
          <%= link_to "Restaurant's list", restaurants_path, class:"nav-item nav-link ml-5" %>
          <%= link_to "Add a restaurant", new_restaurant_path, class:"nav-item nav-link ml-5" %>
        </div>
      </div>
    </nav>

    <%= yield %>
  </body>
</html>
